<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:gravity="bottom"
        android:height="2dp">
        <shape android:shape="rectangle">
            <padding
                android:bottom="5dp"
                android:left="5dp"
                android:right="5dp"
                android:top="5dp" />
            <gradient
                android:angle="315"
                android:endColor="@color/pink_2"
                android:startColor="@color/pink_1"
                android:type="linear" />
        </shape>
    </item>
</layer-list>