<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BottomNavigationViewCustomIndicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@android:color/transparent</item>
    </style>

    <style name="Theme.Space.Dialog.Fullscreen" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="colorPrimaryDark">@android:color/transparent</item>
        <item name="colorAccent">@android:color/transparent</item>
        <item name="colorPrimary">@android:color/transparent</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="actionMenuTextColor">@android:color/transparent</item>
    </style>

    <style name="Theme.Space.Dialog.Basic" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="colorPrimaryDark">@android:color/transparent</item>
        <item name="colorAccent">@android:color/transparent</item>
        <item name="colorPrimary">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="actionMenuTextColor">@android:color/transparent</item>
    </style>

    <style name="Theme.Space.Toolbar" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorControlNormal">@android:color/white</item>
        <item name="android:actionButtonStyle">@style/Theme.Space.ActionButton</item>
        <item name="actionButtonStyle">@style/Theme.Space.ActionButton</item>
    </style>

    <style name="Theme.Space.ActionButton" parent="Widget.AppCompat.ActionButton">
        <item name="android:minWidth">48dp</item>
        <item name="android:maxWidth">48dp</item>
        <item name="android:width">48dp</item>
        <item name="minHeight">48dp</item>
        <item name="maxHeight">48dp</item>
        <item name="android:height">48dp</item>
    </style>
</resources>